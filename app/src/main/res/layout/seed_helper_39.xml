<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/버튼타이틀"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnwhite"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="시드 층"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toTopOf="@id/시드23"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/시드23"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="23"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/버튼타이틀"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드24"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="24"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드23"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드36"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="36"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드39"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드24"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드39"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/jalnan"
        android:text="39"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드36"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드47"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="47"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드39"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드48"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="48"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/시드49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드47"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/시드49"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@drawable/roundbtnviolet"
        android:fontFamily="@font/jalnan"
        android:text="49"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/시드48"
        app:layout_constraintVertical_weight="2" />

    <TextView
        android:id="@+id/타이틀"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbutton"
        android:fontFamily="@font/jalnan"
        android:gravity="center"
        android:text="시드 39층"
        android:textSize="29dp"
        app:layout_constraintLeft_toRightOf="@id/버튼타이틀"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/검색"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_below="@id/타이틀"
        android:layout_margin="2dp"
        android:background="@drawable/border"
        android:drawableLeft="@drawable/snail"
        android:hint="힌트 검색(예: 문제 또는 답)"
        android:imeOptions="actionSearch"
        app:layout_constraintLeft_toRightOf="@id/시드23"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/타이틀"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/퀴즈"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/시드39"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/검색" />


</androidx.constraintlayout.widget.ConstraintLayout>


