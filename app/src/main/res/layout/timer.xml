<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainimage">

    <TextView
        android:id="@+id/타이틀"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="재획 타이머"
        android:textColor="#FC86D1"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/재획비"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ImageView
        android:id="@+id/재획비"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/wealth_acquisition_potion"
        app:layout_constraintBottom_toTopOf="@id/타이머토글"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/타이틀"

        />



    <TextView
        android:id="@+id/타이머토글"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="120분 0초"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/재획비"
        app:layout_constraintBottom_toTopOf="@id/시작"
        />
    <Button
        android:id="@+id/시작"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작하기"
        app:layout_constraintTop_toBottomOf="@id/타이머토글"
        app:layout_constraintBottom_toTopOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/중단"
        />
    <Button
        android:id="@+id/중단"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중단"
        app:layout_constraintTop_toBottomOf="@id/타이머토글"
        app:layout_constraintBottom_toTopOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toRightOf="@id/시작"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/아이콘그룹1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/시작"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/아이콘그룹2"
        />
    <ImageView
        android:id="@+id/정펜"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_pendent"
        app:layout_constraintLeft_toLeftOf="@id/아이콘그룹1"
        app:layout_constraintRight_toLeftOf="@id/경축비"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        />
    <ImageView
        android:id="@+id/경축비"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_postion"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toRightOf="@id/정펜"
        app:layout_constraintRight_toLeftOf="@id/경뿌"
        />
    <ImageView
        android:id="@+id/경뿌"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_rate"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹1"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/경축비"
        />

    <View
        android:id="@+id/아이콘그룹2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/아이콘그룹1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/경쿠"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/exp_rate_two"
        app:layout_constraintLeft_toLeftOf="@id/아이콘그룹2"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹2"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹2"
        app:layout_constraintRight_toLeftOf="@id/홀심"
        />
    <ImageView
        android:id="@+id/홀심"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/holy_symbol"
        app:layout_constraintLeft_toRightOf="@id/경쿠"
        app:layout_constraintTop_toTopOf="@id/아이콘그룹2"
        app:layout_constraintBottom_toBottomOf="@id/아이콘그룹2"
        app:layout_constraintRight_toRightOf="@id/아이콘그룹2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

